# ===============================================================================
# HOSPITAL MANAGEMENT SYSTEM - ENVIRONMENT CONFIGURATION
# ===============================================================================
# Copy this file to .env and configure according to your environment
# ===============================================================================

# Application Configuration
APP_NAME="Hospital Management System"
APP_ENV=local
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Database Configuration (MySQL)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=hospital_management_db
DB_USERNAME=root
DB_PASSWORD=

# Alternative Database Configuration (SQLite for development)
# DB_CONNECTION=sqlite
# DB_DATABASE=C:\xampp\htdocs\Atripo\hospital-management-system\database\database.sqlite

# Cache Configuration
CACHE_STORE=database
CACHE_PREFIX=

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=database

# Mail Configuration (for future email features)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="admin@hospital.com"
MAIL_FROM_NAME="${APP_NAME}"

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# File Storage Configuration
FILESYSTEM_DISK=local

# Broadcasting Configuration (for future real-time features)
BROADCAST_CONNECTION=log
BROADCAST_DRIVER=log

# Additional Configuration
VITE_APP_NAME="${APP_NAME}"
